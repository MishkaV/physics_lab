<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="view.fragments.registrationScreen.RegistrationScreenStudent">


    <TextView
        android:id="@+id/registrationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center_vertical"
        android:text="Регистрация"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/registrationWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrationText"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center_vertical"
        android:text="А где учитесь?"
        android:textSize="32sp" />

    <Spinner
        android:id="@+id/spinnerSchool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrationWelcomeText"
        android:entries="@array/schools"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        />

    <TextView
        android:id="@+id/classText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerSchool"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center_vertical"
        android:text="В каком классе?"
        android:textSize="32sp" />

    <Spinner
        android:id="@+id/spinnerClass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/classText"
        android:entries="@array/clases"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrationButtonFragStudent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/spinnerClass"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorMainBlue"
        android:fontFamily="@font/rubik_regular"
        android:onClick="onClick"
        android:text="Дальше"
        android:textColor="@color/colorMainWhite"
        app:cornerRadius="15dp"
        app:strokeColor="@color/colorMainBlue"
        app:strokeWidth="2dp" />
</RelativeLayout>
