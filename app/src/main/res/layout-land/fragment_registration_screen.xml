<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="view.fragments.loginScreen.LoginScreen">

    <TextView
    android:id="@+id/registrationText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="16dp"
    android:layout_marginTop="5dp"
    android:fontFamily="@font/rubik_regular"
    android:gravity="center_vertical"
    android:text="Регистрация"
    android:textSize="18sp" />

    <TextView
        android:id="@+id/registrationWelcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registrationText"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/rubik_regular"
        android:gravity="center_vertical"
        android:text="Давайте знакомиться"
        android:textSize="32sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/nameEditLayoutReg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/registrationWelcomeText"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:hint="Имя"
        app:boxStrokeColor="@color/colorMainBlue"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorMainBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameEditTextReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/surnameEditLayoutReg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameEditLayoutReg"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Фамилия"
        app:boxStrokeColor="@color/colorMainBlue"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorMainBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/surnameEditTextReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/patronymicEditLayoutReg"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surnameEditLayoutReg"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Отчество"
        app:boxStrokeColor="@color/colorMainBlue"
        app:errorEnabled="true"
        app:hintTextColor="@color/colorMainBlue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/patronymicEditTextReg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/registrationButtonFrag1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/patronymicEditLayoutReg"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/colorMainBlue"
        android:fontFamily="@font/rubik_regular"
        android:onClick="onClick"
        android:text="Дальше"
        android:textColor="@color/colorMainWhite"
        app:cornerRadius="15dp"
        app:strokeColor="@color/colorMainBlue"
        app:strokeWidth="2dp" />
</RelativeLayout>
